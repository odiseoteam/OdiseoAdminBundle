{% extends '@OdiseoAdmin/layout.html.twig' %}

{% import '@OdiseoAdmin/Macro/headers.html.twig' as headers %}
{% import '@OdiseoAdmin/Macro/buttons.html.twig' as buttons %}

{% set header = configuration.vars.header|default(metadata.applicationName~'.ui.edit_'~metadata.name) %}

{% block title %}{{ parent() }} {{ header|trans }}{% endblock %}

{% block content_title %}
    <h1><i class="fa fa-{{ configuration.vars.icon|default('edit') }}"></i> {{ header|trans }}</h1>
{% endblock %}

{% block breadcrumb %}
    {% include configuration.vars.templates.breadcrumb|default('@OdiseoAdmin/Crud/Update/_breadcrumb.html.twig') %}
{% endblock %}

{% form_theme form '@OdiseoAdmin/Form/theme.html.twig' %}

{% block content %}
{% include '@OdiseoAdmin/Crud/Update/_header.html.twig' %}
{% include '@OdiseoAdmin/Crud/Update/_content.html.twig' %}
{% endblock %}
