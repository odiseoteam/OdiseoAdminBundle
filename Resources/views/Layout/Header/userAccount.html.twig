<!-- User Account Menu -->
<li class="dropdown user user-menu">
	<!-- Menu Toggle Button -->
	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		<!-- The user image in the navbar-->
    	<img src="{{ asset('assets/admin/img/AdminLTE/avatar7.gif') }}" class="user-image" alt="User Image" />
		
		{% if app.user %}
		<!-- hidden-xs hides the username on small devices so only the image appears. -->
		<span class="hidden-xs">{{ app.user.username|default('Administrator')|capitalize }}</span>
		{% endif %}
	</a>
	<ul class="dropdown-menu">
		<!-- The user image in the menu -->
		<li class="user-header">
    		<img src="{{ asset('assets/admin/img/AdminLTE/avatar7.gif') }}" class="img-circle" alt="User Image" />
			{% if app.user %}
			<p>
				{{ app.user.username|default('Administrator')|capitalize }}
				<!-- <small>Member since Nov. 2012</small> -->
			</p>
			{% endif %}
		</li>
		
